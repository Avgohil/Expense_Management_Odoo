{
  "info": {
    "name": "Expense Management System API",
    "description": "Complete API collection for Expense Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123\",\n  \"companyId\": \"{{companyId}}\",\n  \"roles\": [\"employee\"]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.data.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Companies",
      "item": [
        {
          "name": "Create Company",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"companyId\", jsonData.data._id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Acme Corporation\",\n  \"baseCurrency\": \"USD\",\n  \"email\": \"admin@acme.com\",\n  \"settings\": {\n    \"approvalWorkflow\": true,\n    \"autoApprovalLimit\": 100,\n    \"requireReceipts\": true,\n    \"allowMultipleCurrencies\": true\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/companies",
              "host": ["{{baseUrl}}"],
              "path": ["companies"]
            }
          }
        },
        {
          "name": "Get All Companies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/companies",
              "host": ["{{baseUrl}}"],
              "path": ["companies"]
            }
          }
        }
      ]
    },
    {
      "name": "Expenses",
      "item": [
        {
          "name": "Create Expense",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Business Lunch\",\n  \"description\": \"Lunch meeting with client\",\n  \"amount\": 75.50,\n  \"currency\": \"USD\",\n  \"category\": \"meals\",\n  \"date\": \"2025-10-04\",\n  \"merchant\": \"Restaurant ABC\",\n  \"location\": \"New York, NY\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/expenses",
              "host": ["{{baseUrl}}"],
              "path": ["expenses"]
            }
          }
        },
        {
          "name": "Get All Expenses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/expenses",
              "host": ["{{baseUrl}}"],
              "path": ["expenses"]
            }
          }
        },
        {
          "name": "Get My Expenses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/expenses/my-expenses",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "my-expenses"]
            }
          }
        },
        {
          "name": "Submit Expense for Approval",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Please review this expense\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/expenses/{{expenseId}}/submit",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "{{expenseId}}", "submit"]
            }
          }
        }
      ]
    },
    {
      "name": "Approvals",
      "item": [
        {
          "name": "Get Pending Approvals",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/approvals/pending",
              "host": ["{{baseUrl}}"],
              "path": ["approvals", "pending"]
            }
          }
        },
        {
          "name": "Approve Expense",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comments\": \"Approved\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/approvals/{{expenseId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["approvals", "{{expenseId}}", "approve"]
            }
          }
        },
        {
          "name": "Reject Expense",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Missing receipt\",\n  \"comments\": \"Please provide receipt and resubmit\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/approvals/{{expenseId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["approvals", "{{expenseId}}", "reject"]
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Company Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dashboard/company-stats",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "company-stats"]
            }
          }
        },
        {
          "name": "User Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dashboard/user-stats",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "user-stats"]
            }
          }
        },
        {
          "name": "Expenses by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dashboard/expenses-by-category",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "expenses-by-category"]
            }
          }
        }
      ]
    },
    {
      "name": "Currency",
      "item": [
        {
          "name": "Get All Currencies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/currency/list",
              "host": ["{{baseUrl}}"],
              "path": ["currency", "list"]
            }
          }
        },
        {
          "name": "Get Exchange Rate",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/currency/exchange-rate?from=EUR&to=USD",
              "host": ["{{baseUrl}}"],
              "path": ["currency", "exchange-rate"],
              "query": [
                {
                  "key": "from",
                  "value": "EUR"
                },
                {
                  "key": "to",
                  "value": "USD"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
