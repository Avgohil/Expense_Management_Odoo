# Application
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/expense-management

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@expense-management.com

# Google Vision API
GOOGLE_APPLICATION_CREDENTIALS=./google-vision-credentials.json

# External APIs
REST_COUNTRIES_API=https://restcountries.com/v3.1/all?fields=name,currencies
EXCHANGE_RATE_API=https://api.exchangerate-api.com/v4/latest

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
